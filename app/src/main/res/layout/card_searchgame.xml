<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_searchgame"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/searchGameTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:outlineAmbientShadowColor="@color/black_overlay"
        android:outlineSpotShadowColor="@color/black_overlay"
        android:textColor="@color/text_grey"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchGamePrice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/currency"
        android:text="@string/currencyExample"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/Divider.Horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>