<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.games.ecommerce">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application
    android:name="com.games.ecommerce.App"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:name=".main.ui.activity.gamelist.ListActivity"
      android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name=".main.ui.activity.gamedetails.GameDetailActivity"
      android:screenOrientation="portrait"
      android:theme="@style/DetailsTheme" />
    <activity
      android:name=".main.ui.activity.shoppingcart.ShoppingCartActivity"
      android:label="@string/cart_label"
      android:screenOrientation="portrait"
      android:theme="@style/ShoppingCartTheme" />
  </application>

</manifest>